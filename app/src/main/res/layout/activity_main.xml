<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECCIONA UNO"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:transitionName="textTrans"/>

            <ImageButton
                android:id="@+id/imgRaiden"
                android:layout_width="301dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:onClick="dirigirRaiden"
                android:textAlignment="center"
                app:srcCompat="@drawable/raiden" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="SHOGUN-ELECTRO" />

            <ImageButton
                android:id="@+id/imgZhongli"
                android:layout_width="301dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:onClick="dirigirZhongli"
                android:textAlignment="center"
                app:srcCompat="@drawable/zonghli" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="ZHONGLI-GEO" />

            <ImageButton
                android:id="@+id/imgVenti"
                android:layout_width="301dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:onClick="dirigirVenti"
                android:textAlignment="center"
                app:srcCompat="@drawable/venti" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="50dp"
                android:text="VENTI-ANEMO" />
        </LinearLayout>

    </ScrollView>




</LinearLayout>